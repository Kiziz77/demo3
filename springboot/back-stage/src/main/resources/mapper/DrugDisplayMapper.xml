<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.mapper.DrugDisplayMapper">


    <select id="selectRespList" resultType="com.web.domain.Resp.DrugDisplayResp">
        select
            t1.`id`,
            t1.`drug_id`,
            t1.`drug_image`,
            t1.`display_status`,
            t1.`unit_price`
                        ,t2.`drug_name`   t2Drugname
                        ,t3.`unit_price`   t3Unitprice
        from drug_display t1
                        left join drug_info t2 on t1.drug_id = t2.id

                        left join drug_info t3 on t1.unit_price = t3.unit_price

        <where>
                            <if test="req.id != null">
                                and t1.id = #{req.id}
                            </if>
                            <if test="req.drugId != null">
                                and t1.drug_id = #{req.drugId}
                            </if>
                            <if test="req.drugImage != null and req.drugImage != ''">
                                and t1.drug_image like concat('%', #{req.drugImage}, '%')
                            </if>
                            <if test="req.displayStatus != null and req.displayStatus != ''">
                                and t1.display_status like concat('%', #{req.displayStatus}, '%')
                            </if>
                            <if test="req.unitPrice != null">
                                and t1.unit_price = #{req.unitPrice}
                            </if>
        </where>
    </select>
</mapper>
