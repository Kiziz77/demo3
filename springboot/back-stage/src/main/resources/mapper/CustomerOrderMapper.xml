<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.mapper.CustomerOrderMapper">


    <select id="selectRespList" resultType="com.web.domain.Resp.CustomerOrderResp">
        select
            t1.`id`,
            t1.`customer_name`,
            t1.`phone`,
            t1.`drug_id`,
            t1.`quantity`,
            t1.`order_time`
                        ,t2.`drug_name`   t2Drugname
        from customer_order t1
                        left join drug_info t2 on t1.drug_id = t2.id

        <where>
                            <if test="req.customerName != null and req.customerName != ''">
                                and t1.customer_name like concat('%', #{req.customerName}, '%')
                            </if>
                            <if test="req.phone != null and req.phone != ''">
                                and t1.phone like concat('%', #{req.phone}, '%')
                            </if>
                            <if test="req.drugId != null">
                                and t1.drug_id = #{req.drugId}
                            </if>
                            <if test="req.quantity != null">
                                and t1.quantity = #{req.quantity}
                            </if>
        </where>
    </select>
</mapper>
